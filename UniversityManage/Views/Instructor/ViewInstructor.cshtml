@model UniversityManage.Model.Instructor

@{
    ViewData["Title"] = "View";
}


<!-- ##### Breadcumb Area Start ##### -->
<div class="breadcumb-area bg-img" style="background-image: url('/img/bg-img/breadcumb.jpg');">
    <div class="bradcumbContent">
        <h2>Instructor Info</h2>
    </div>
</div>
<!-- ##### Breadcumb Area End ##### -->

<div class="section-padding-100">
    <div class="container">
        <div class="row">
            <div class="col-12 d-flex justify-content-center">
                <div class="section-heading text-center wow fadeInUp" data-wow-delay="300ms">

                    @if (Model != null)
                    {
                        <div class="card " style="width: 18rem;">
                            <img class="card-img-top" src="~/img/bg-img/pc-2.jpg" alt="Card image cap">
                            <div class="card-body">
                                <h5 class="card-title">@Model.Name</h5>
                                <p class="card-text">About Instructor: Lorem ipsum dollr sit amet.</p>
                            </div>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">ID: @Model.Id</li>
                                <li class="list-group-item">Department: @Model.DepartmentInstructor.Name</li>
                                <li class="list-group-item">ID: @Model.DateofRegistration</li>

                            </ul>
                        </div>
                    }
                    else
                    {
                        <h3>No Instructor Found with given info</h3>
                    }

                </div>
            </div>
        </div>


    </div>
</div>
