@model UniversityManage.Model.Course

@{
    ViewData["Title"] = "View";
}

<div class="section-padding-100">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-heading wow fadeInUp" data-wow-delay="300ms">

                    @if (Model != null)
                    {
                    <div class="card " style="width: 18rem;">
                        <img class="card-img-top" src="~/img/bg-img/pc-2.jpg" alt="Card image cap">
                        <div class="card-body">
                            <h2 class="card-title">@Model.Code</h2>
                            <p class="card-text">@Model.Name</p>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">Department: @Model.DepartmentId</li>
                            <li class="list-group-item">Instructor: @Model.InstructorId</li>
                        </ul>
                    </div>
                    }
                    else
                    {
                        <h3>No Instructor Found</h3>
                    }

                </div>
            </div>
        </div>


    </div>
</div>
