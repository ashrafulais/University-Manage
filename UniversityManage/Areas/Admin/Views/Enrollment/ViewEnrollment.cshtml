@model UniversityManage.Model.Student

@{
    ViewData["Title"] = "View";
}

<div class="section-padding-100">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-heading wow fadeInUp" data-wow-delay="300ms">

                    @if (Model != null)
                    {
                        <div class="card " style="width: 18rem;">
                            <img class="card-img-top" src="~/img/bg-img/pc-2.jpg" alt="Card image cap">
                            <div class="card-body">
                                <h2 class="card-title">@Model.Name</h2>
                                <p class="card-text">About Student: Lorem ipsum dollr sit amet.</p>
                            </div>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">Department: @Model.DepartmentId</li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <h3>No Student Found</h3>
                    }

                </div>
            </div>
        </div>


    </div>
</div>
