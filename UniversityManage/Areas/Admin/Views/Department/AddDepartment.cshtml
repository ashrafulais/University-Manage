@model UniversityManage.Model.Department
@{
    ViewData["Title"] = "Department";

}

    <div class="row">
        <div class="col-md-6">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Add Department </h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form role="form" action="AddDepartment" method="post">
                    <div asp-validation-summary="All" class="text-warning">

                    </div>
                    <div class="card-body">

                        <div class="form-group">
                            <label asp-for="@Model.Code">Department Code</label>
                            <input asp-for="@Model.Code" type="text" class="form-control" placeholder="CSE">
                        </div>

                        <div class="form-group">
                            <label asp-for="@Model.Name">Department Name</label>
                            <input asp-for="@Model.Name" type="text" class="form-control" placeholder="Computer Science">
                        </div>

                    </div>
                    <!-- /.card-body -->

                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>

        </div>
    </div>