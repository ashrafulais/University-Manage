@model UniversityManage.Model.StudentCourse
@{
    ViewData["Title"] = "Edit Enrollment";

    var studentid = 0;
    var courseid = 0;
    if(Model != null)
    {
        studentid = Model.StudentId;
        courseid = Model.CourseId;
    }
}

<div class="row">
    <div class="col-md-6">
        <p class="text-danger">This operation won't work. Because there is only composite key :P </p>
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Edit Student @studentid</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form role="form" action="EditEnrollment" method="post">
                <div asp-validation-summary="All" class="text-warning">

                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="@Model.StudentId">Student Id</label>
                        <input asp-for="@Model.StudentId" type="text" class="form-control" placeholder="Enter studentid" value="@studentid">
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.CourseId">Select Course</label>
                        <select class="form-control" asp-for="@Model.CourseId">
                            @if (ViewData["courses"] != null)
                            {
                                var result = (List<UniversityManage.Model.Course>)ViewData["courses"];
                                foreach (var row in result)
                                {
                                    if (row.Id == courseid)
                                    {
                                        <option value="@row.Id" selected> @row.Name </option>
                                    }
                                    else
                                    {
                                        <option value="@row.Id"> @row.Name </option>
                                    }
                                }
                            }
                        </select>
                    </div>
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>

    </div>
</div>